<UserControl x:Class="TWAddIn.TWDevAssessmentScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:twAddIn="clr-namespace:TWAddIn"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <DataTemplate x:Key="LoginScreen">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Enter your Registration ID:"/>
                    <TextBox Text="{Binding UserId}"/>
                </StackPanel>
                <Button Click="StartTest"></Button>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="QuestionScreen">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding QuestionDescription}"></TextBlock>
            </StackPanel>
        </DataTemplate>

        <twAddIn:ScreenSelector x:Key="ScreenSelector"/>

    </UserControl.Resources>
    <Grid>

        <GroupBox Content="{Binding IsLoggedIn}" ContentTemplateSelector="{StaticResource ScreenSelector}">

        </GroupBox>
    </Grid>
</UserControl>
